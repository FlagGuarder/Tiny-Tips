<?xml version="1.0" encoding="utf-8"?>
<!--笔记详情页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#7ae3f9">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/toolbarback"
            android:id="@+id/homePageNoteDetailsBack"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="22sp"
            android:text="asdfghjkkjhgfd"
            android:id="@+id/homePageNoteDetailsTitle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="asdfg"
                android:textSize="18sp"
                android:id="@+id/homePageNoteDetailsAuthor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="zxcvbn"
                android:textSize="18sp"
                android:id="@+id/homePageNoteDetailsDate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="sdfghgfd"
                android:textSize="18sp"
                android:id="@+id/homePageNoteDetailsClassify1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="sdfghgfd"
                android:id="@+id/homePageNoteDetailsClassify2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="sdfghgfd"
                android:id="@+id/homePageNoteDetailsClassify3"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/homePageNoteDetailsWordDetails"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/homePageNoteDetailsImage1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/homePageNoteDetailsImage2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/homePageNoteDetailsImage3"/>
    </LinearLayout>
</LinearLayout>