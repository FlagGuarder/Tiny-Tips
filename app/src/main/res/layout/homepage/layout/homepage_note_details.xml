<?xml version="1.0" encoding="utf-8"?>
<!--笔记详情页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#7ae3f9"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/toolbarback"
            android:id="@+id/homePageNoteDetailsBack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="保存"
            android:textSize="18sp"
            android:id="@+id/homePageNoteDetailsSave"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homePageNoteDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:text="asdfghjkkjhgfd"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homePageNoteDetailsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="asdfg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homePageNoteDetailsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="zxcvbn"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homePageNoteDetailsClassify1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="sdfghgfd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homePageNoteDetailsClassify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="sdfghgfd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homePageNoteDetailsClassify3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="sdfghgfd"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/homePageNoteDetailsWordDetails"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="3"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/homePageNoteDetailsImage1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/homePageNoteDetailsImage2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/homePageNoteDetailsImage3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />
    </LinearLayout>
</LinearLayout>